@using Web.Helper
@using Web.Models.Disease

@model DiseaseMainVM

@{
	ViewBag.Title = "Disease Details";
}

<div class="container-fluid p-0">

	<div class="mb-3">
		<h1 class="h3 d-inline align-middle">User Details</h1>
	</div>

	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header d-flex justify-content-between align-content-between align-items-center flex-wrap">
					<div>
						<h5 class="card-title">Disease Details with Registration Info</h5>
						<h6 class="card-subtitle text-muted">
							Here you can manage your disease details.
						</h6>
					</div>
					<div>
						<a asp-action="Index" class="btn btn-default">Back</a>
					</div>
				</div>
				<div class="card-body" id="@ContainerId.DiseaseDetails">
				</div>
			</div>
		</div>
	</div>
</div>

@section scripts {
	<script>
		(function () {

			/**
			 * Load disease details
			 * Take the Url action to load partial and load the container
			 */
			var LoadDiseasesDetails = function ()
			{
				Controls.RelaodContainer('@Url.Action("DiseaseDetails", "Disease", new { id = Model.DiseaseId })', '@ContainerId.DiseaseDetails');
			}

			/**
			 * Open disease pop-up when click edit button
			 * Take the Url action to load partial and Open the bootstrap modal
			 */
			var EditDisease = function()
			{
				var id  = $(this).attr("data-id");
				var url = `@Url.Action("AddEdit", "Disease")?id=${id}`;

				Controls.OpenPopUpModal(url, "@UniqueIdentifier.MainModelId", "Update Disease Details");
			}

			/**
			 * Submit the form via ajax and close the main modal
			 */
			var SubmitModalForm = function()
			{
				var form = $(this).closest('.modal').find('.modal-body form');

				Controls.RelaodContainerOnModalPost("@UniqueIdentifier.MainModelId", form, '@ContainerId.DiseaseDetails', LoadDiseasesDetails);
			}


			// Handle events
			$(document).ready(LoadDiseasesDetails);
			$(document).on('click', '#@ButtonId.DiseaseEdit', EditDisease);
			$(document).on('click', '.@ButtonClass.MainModalSubmit', SubmitModalForm);
		})();
	</script>
}