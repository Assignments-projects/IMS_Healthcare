@using Web.Models.Role
@using Web.Helper

@model RoleVM

<form asp-controller="Role" asp-action="AddEdit" method="post">
    <input type="hidden" asp-for="Id"/>

    <div class="row mb-3">
        <div asp-validation-summary="ModelOnly"></div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="Name" class="@FormHelper.lblRequired">Role Name</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="NormalizedName">Normalized Name</label>
            <input type="text" class="form-control" asp-for="NormalizedName" readonly/>
        </div>
    </div>
</form>

<script>
    (function () {
        $('#@Html.IdFor(x => x.Name)').on('input', function () {
            var value = $(this).val().toUpperCase();
            $('#@Html.IdFor(x => x.NormalizedName)').val(value);
        });
    })();
</script>